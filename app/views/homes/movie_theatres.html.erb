<%= render 'layouts/headbar'  %>
<div class="container">
	<div class="well">
		<h3>Movie Name : <%= @movie.name %></h3>
		<table id="datatable" class="table table-condensed">

			<tbody>
				<% @shows.each do |theatre,showes| %>
				<tr>
					<td><%= link_to theatre %></td>
					<%showes.each do |show|%>
					<td title="180 seat remain">
					<%if show.starttime.strftime() > DateTime.now.strftime()%>
						<%=link_to  show.starttime.strftime("%I:%M%p"),new_movie_show_booking_path(show.movie,show) %>
					<%else%>
						<%=show.starttime.strftime("%I:%M%p") %>
					<%end%>
					</td>
						<%end%>
					</tr>
					<%end%>
				</tbody>
			</table>
		</div>
	</div>