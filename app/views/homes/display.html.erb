<%= render 'layouts/headbar'  %>
<div class="container">
	<div class="well">
<h3>Theatre Name:<%= @theatre.name %></h3>
<table id="datatable" class="table table-condensed">
	<thead>
		<th>Movie</th>
		<th>Screen</th>
		<th>Date</th>
		<th>Time</th>
		<th>Action</th>
	</thead>

	<tbody>
		<% @shows.each do | show |%>
		<tr>
			<td><%= link_to show.movie.name, theatre_screen_seats_path(@theatre, show.screen) %></td>
			<td><%= show.screen.name %> </td>
			<td><%= show.starttime.strftime("%d/%m/%Y") %></td>
			<td><%= show.starttime.strftime("%I:%M%p") %></td>
			<td><%=link_to 'Book Ticket', new_movie_booking_path(show.movie)%></td>
		</tr>
		<%end%>
	</tbody>
</table>
</div>
</div>