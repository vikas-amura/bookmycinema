<%= render "layouts/headbar" %>
<div class="container">

	<div class="well well-lg">
		<p class="lead">Movies shown so far...</p>
		<div style="margin-top: 25px;"></div>

		<div class="row">

			<div class="col-xs-4 col-md-4 col-lg-4">
				<div class="col-xs-12 col-md-12 list-group">
					<a href="" class="col-xs-12 col-md-12 category-heading list-group-item active">Select Theatre</a>
					<% @theatres.each do |theatre| %>
						<% if theatre.shows.present? %>
						 <a href="display/<%=theatre.id%>" class="col-xs-12 col-md-12 list-group-item" style="text-overflow: ellipsis;">
							 <%= theatre.name %>
							 <span class="pull-right"><%= theatre.address %>,<%= theatre.city %></span>
						 </a>
						<% end %>
					<% end %>
				</div>
			</div>
			<div class="col-xs-4 col-md-4 col-lg-4">
				<div class="col-xs-12 col-md-12 list-group">
					<a href="" class="col-xs-12 col-md-12 category-heading list-group-item active">English</a>
					<% @shows.each do |show| %>
						<% if show.movie.language.humanize == "English" %>
						 <a href="<%= movie_path(show.movie) %>" class="col-xs-12 col-md-12 list-group-item" style="text-overflow: ellipsis;">
							 <%= show.movie.name %>
							 <span class="badge"><%= show.movie.movie_format %></span>
						 </a>
						<% end %>
					<% end %>
				</div>
			</div>

			<div class="col-xs-4 col-md-4 col-lg-4">
				<div class="col-xs-12 col-md-12 list-group">
					<a href="" class="col-xs-12 col-md-12 category-heading list-group-item active">Hindi</a>
					<% @shows.each do |show| %>
						<% if show.movie.language.humanize == "Hindi" %>
						 <a href="<%= movie_path(show.movie) %>" class="col-xs-12 col-md-12 list-group-item" style="text-overflow: ellipsis;">
							 <%= show.movie.name %>
							 <span class="badge"><%= show.movie.movie_format %></span>
						 </a>
						<% end %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
