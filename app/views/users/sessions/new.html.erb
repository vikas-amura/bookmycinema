<div class="row">
  <div class="login-container">
    <div class="row">
      <h3>Bookmycinema Login</h3>
    </div>
    <div class="row">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-validatable") do |f| %>
      <div class="form-group">
        <%= f.label :email, for: "email" %><br />
        <%= f.email_field :email, class: "form-control", id: "email", placeholder: "Email", email: "true", autocomplete: "off" %>
      </div>
      <div class="form-group">
        <%= f.label :password, for: "password" %><br />
        <%= f.password_field :password, class: "form-control", id: "password", placeholder: "Password", autocomplete: "off" %>
      </div>
      <div class="checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <%= f.submit "Log in", class: "btn btn-default" %>
      <br />
      <%= render "users/shared/links" %>
      <% end %>
    </div>
  </div>
</div>
