
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-horizontal") do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <%= f.label :first_name, class: "col-sm-2 control-label", for: "firstname" %>
    <div class="col-sm-10">
      <%= f.text_field :first_name, class: "form-control", id: "firstname", placeholder: "First name" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "col-sm-2 control-label", for: "lastname" %>
    <div class="col-sm-10">
      <%= f.text_field :last_name, class: "form-control", id: "lastname", placeholder: "Last name" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label", for: "email" %>
    <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control", id: "email", placeholder: "Email" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-sm-2 control-label", for: "password" %>
    <div class="col-sm-10">
      <%= f.password_field :password, class: "form-control", id: "password", placeholder: "*****" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "col-sm-2 control-label", for: "password_confirmation" %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, class: "form-control", id: "password_confirmation", placeholder: "*****" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :mobile, class: "col-sm-2 control-label", for: "mobile" %>
    <div class="col-sm-10">
      <%= f.text_field :mobile, class: "form-control", id: "mobile", placeholder: "Mobile number" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :gender, class: "col-sm-2 control-label", for: "gender" %>
    <div class="col-sm-10">
      <%= f.text_field :gender, class: "form-control", id: "gender", placeholder: "male or female" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :date_of_birth, class: "col-sm-2 control-label", for: "date_of_birth" %>
    <div class="col-sm-10">
      <%= f.text_field :date_of_birth, class: "form-control", id: "date_of_birth", placeholder: "dd/mm/yyyy" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  <div class="row">
<% end %>

<%= render "users/shared/links" %>
