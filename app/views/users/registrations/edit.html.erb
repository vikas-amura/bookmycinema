<%= render template: "layouts/headbar" %>
<div class="container">
  <%= render 'shared/breadcrumb' %>
  <% if flash[:notice] %>
  <div class="alert alert-success">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <%= flash[:notice] %>
  </div>
  <% end %>
  <div class="well">
    <div class="row">
      <div class="col-sm-12 col-md-12"><h2>Edit Preferences</h2></div>
      <div class="col-sm-12 col-md-12" style="margin-top: -10px; margin-bottom: 20px;"><small>This is custom form. Edit only fields which you want to.</small></div>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, class: "control-label", for: "email" %>
      <%= f.email_field :email, class: "form-control", id: "email", placeholder: "xyz@example.com" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :new_password, class: "control-label", for: "new_password" %>
      <%= f.password_field :password, class: "form-control", id: "new_password", placeholder: "********", autocomplete: "off" %>
    </div>

    <div class="form-group">
      <%= f.label :re_enter_password, class: "control-label", for: "reenter_password" %>
      <%= f.password_field :password_confirmation, class: "form-control", id: "reenter_password", placeholder: "********", autocomplete: "off" %>
    </div>

    <div class="form-group">
      <%= f.label :first_name, class: "control-label", for: "firstname" %>
      <%= f.text_field :first_name, class: "form-control", id: "firstname", placeholder: "First name" %>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class: "control-label", for: "lastname" %>
      <%= f.text_field :last_name, class: "form-control", id: "lastname", placeholder: "Last name" %>
    </div>

    <div class="form-group">
      <%= f.label :mobile, class: "control-label", for: "mobile" %>
      <%= f.text_field :mobile, class: "form-control", id: "mobile", placeholder: "Mobile" %>
    </div>

    <div class="form-group">
      <%= f.label :date_of_birth, class: "control-label", for: "date_of_birth" %>&nbsp;(yyyy/mm/dd)
      <%= f.text_field :date_of_birth, class: "form-control", id: "date_of_birth", placeholder: "dd/mm/yyyy" %>
    </div>

    <div class="form-group">
      <%= f.radio_button(:gender, "male", id: "male") %>
      <%= f.label(:male, "Male", for: "male") %>
      <%= f.radio_button(:gender, "female", id: "female") %>
      <%= f.label(:female, "Female", for: "female") %>
    </div>

    <div class="form-group">
      <%= f.submit "Update Account", class: "btn btn-default"  %>
    </div>
    <% end %>

    <hr />

    <h4>Delete Account</h4>
    <p>
      Once you delete your account, there is no going back. Please be certain.
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-default" %>
    </p>
  </div>
</div>
