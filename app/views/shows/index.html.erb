<%= render 'layouts/headbar'%>
<div class="container">
  <%=render 'layouts/breadcrumb'%>
  <% if current_user.role == "admin" %>
  <%= link_to 'New Show', new_movie_show_path(@movie) %>
  <% end %>
  <div class="well">
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>Start Time</th>
          <th>End Time</th>
          <th>Screen</th>
          <th>Theater</th>
          <% if current_user.role == "admin" %>
          <th>Action</th>
          <th>Action</th>
          <th>Action</th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @shows.each do |show| %>
        <tr>
          <td><%= show.starttime.strftime("on %d/%m/%Y at %I:%M%p") %></td>
          <td><%= show.endtime.strftime("on %d/%m/%Y at %I:%M%p") %></td>
          <td><%= show.screen.name if show.screen? %></td>
          <td>City Pride<%#= screen.theater.name if screen.theater? %></td>
          <% if current_user.role == "admin" %>
          <td><%= link_to 'Show', movie_show_path(@movie,show) %></td>
          <td><%= link_to 'Edit', edit_movie_show_path(@movie,show) %></td>
          <td><%= link_to 'Destroy',[@movie,show], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
