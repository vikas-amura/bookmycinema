<%= form_for(@movie) do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name,:required => true %>
  </div>
  <div class="field">
    <%= f.label :language %><br>
    <%=f.select :language,LANGUAGE,:required => true %>
  </div>
  <div class="field">
    <%= f.label :genre %><br>
    <%=f.select :genre,GENRE,:required => true %>
  </div>

  <div class="field">
    <%= f.label :duration %><br>
    <%= f.text_field :duration ,:required => true %>
  </div>
  <div class="field">
    <%= f.label :movie_format %><br>
    <%= f.select :movie_format,MOVIE_FORMAT,:required => true  %>
  </div>
  <div class="field">
    <%= f.label :trailer_url %><br>
    <%= f.text_field :trailer_url,:required => true  %>
  </div>
  <div class="field">
    <%= f.label :rating %><br>
    <% (1..10).each do |value| %>
      <%=value%><%= f.radio_button'rating', value, :required => true %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :release_date %><br>
    <%= f.date_field :release_date ,:required => true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
