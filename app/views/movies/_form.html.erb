<%= form_for(@movie) do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, :required => true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :language %><br>
    <%= f.select :language, LANGUAGE, {}, :required => true, class: "form-control", :selected => f.object.language %>
  </div>
  <div class="form-group">
    <%= f.label :genre %><br>
    <%= f.select :genre, GENRE, {}, :required => true, class: "form-control", :selected => f.object.genre %>
  </div>

  <div class="form-group">
    <%= f.label :duration %><br>
    <%= f.text_field :duration, :required => true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :movie_format %><br>
    <%= f.select :movie_format, MOVIE_FORMAT, {}, :required => true, class: "form-control", :selected => f.object.movie_format %>
  </div>
  <div class="form-group">
    <%= f.label :trailer_url %><br>
    <%= f.text_field :trailer_url,:required => true , class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :rating %><br>
    <% (1..10).each do |value| %>
      <%=value%><%= f.radio_button'rating', value, :required => true %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :release_date %><br>
    <%= f.date_field :release_date ,:required => true, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-default" %>
  </div>
<% end %>
