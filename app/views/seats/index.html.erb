<%= render template: "layouts/headbar" %>
<div class="container">
  <%= render 'shared/breadcrumb' %>
  <% if can? :manage, Seat %>
    <%= link_to 'New Seat', new_theatre_screen_seat_path(@theatre,@screen) %>
  <%end%>
  <% if flash[:notice] %>
  <div class="alert alert-success">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <%= flash[:notice] %>
  </div>
  <% end %>
  <div class="well">
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>Seat Number</th>
          <th>Seat Row</th>
          <th>Seat Type</th>
          <th>Seat Price</th>
          <th colspan=3>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @seats.each do |seat| %>
        <tr>
          <td><%= seat.row %></td>
          <td><%= seat.seat_number %></td>
          <td><%= seat.seat_type %></td>
          <td><%= seat.seat_price %></td>
          <% if can? :manage, Seat %>
          <td><%= link_to '', theatre_screen_seat_path(@theatre,@screen,seat),class: "fa fa-eye" ,title: "Show" %></td>
          <td><%= link_to '', edit_theatre_screen_seat_path(@theatre,@screen,seat),class: "fa fa-pencil-square-o" ,title: "Edit" %></td>
          <td><%= link_to '',[@theatre,@screen,seat], method: :delete, data: { confirm: 'Are you sure?' } ,class: "fa fa-times", title: "Delete"%></td>
          <%end%>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="digg_pagination">
  <%= will_paginate @seats, :container => false %>
</div>
