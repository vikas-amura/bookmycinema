<%= render template: "layouts/headbar" %>
<div class="container">
  <%= render 'shared/breadcrumb' %>
  <% if flash[:notice] %>
  <div class="alert alert-success">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <%= flash[:notice] %>
  </div>
  <% end %>
 <% if can? :manage, Screen %>
  <%= link_to 'New Screen', new_theatre_screen_path(@theatre) %>
  <% end %>
  <div class="well">
    <table  class="table table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Capacity</th>
          <% if current_user.role == "admin" %>
          <th>Seats</th>
          <th colspan=3>Action</th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @screens.each do |screen| %>
        <tr>
          <td><%= screen.name %></td>
          <td><%= screen.capacity %></td>
          <% if can? :manage, Screen %>
          <td><%= link_to 'Seats', theatre_screen_seats_path(@theatre,screen) %></td>
          <td><%= link_to '', theatre_screen_path(@theatre,screen),class: "fa fa-eye" ,title: "Show" %></td>
          <td><%= link_to '', edit_theatre_screen_path(@theatre,screen),class: "fa fa-pencil-square-o" ,title: "Edit"%></td>
          <td><%= link_to '',[@theatre,screen], method: :delete, data: { confirm: 'Are you sure?' } ,class: "fa fa-times", title: "Delete"%></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="digg_pagination">
      <%= will_paginate @screens, :container => false %>
    </div>
  </div>
</div>
