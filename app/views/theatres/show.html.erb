<%= render 'layouts/headbar'%>

<div class="container">
  <%=render 'layouts/breadcrumb'%>
  <div class="well">
    <p class="lead">
      <strong>Name:</strong>
      <%= @theatre.name %>
    </p>

    <p class="lead">
      <strong>Address:</strong>
      <%= @theatre.address %>
    </p>

    <p class="lead">
      <strong>City:</strong>
      <%= @theatre.city %>
    </p>

    <%= link_to 'Edit', edit_theatre_path(@theatre) %> |
    <%= link_to 'Back', theatres_path %>
  </div>
</div>
